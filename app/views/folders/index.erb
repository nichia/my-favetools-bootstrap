<!-- /folders/index -->

<div class="container">

  <%= erb :'/partials/_flash_message' %>

  <div class="col-md-8 col-md-offset-2">
    <% if path_info.match(/\/users\//) %>
      <% p_user = path_info.split("/users/").last %>
      <h3>Folders shared by <%= p_user %></h3>
    <% else %>
      <h3>All Folders</h3>
    <% end %>

    <table>
      <tr>
        <th> Name </th>
        <th> Description </th>
        <th> Category </th>
        <th> Owner </th>
        <th> Private </th>
        <th> View Items </th>
      </tr>

      <% @folders.each do |folder| %>
        <tr>
          <td><a href="/folders/<%= folder.id %>/<%= folder.slug %>"><%= folder.name %></a></td>
          <td><%= folder.description %></td>
          <td><%= folder.category.name %></td>
          <td><%= folder.user.name %></td>
          <td><input type="checkbox" <% if folder.privacy %> checked <% end %>></td>
          <td><a href="/items/users/<%= folder.user.slug %>/<%= folder.slug %>"><%= folder.items.count %></a></td>
        </tr>
      <% end %>
    <table>

  </div> <!-- .col-md-8 col-md-offset-2 -->
</div> <!-- .container -->
