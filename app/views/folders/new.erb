<!-- /folders/new -->

<div class="container">

  <%= erb :'/partials/_flash_message' %>

  <div class="col-md-8 col-md-offset-2">
    <h2>Create Folder</h2>
    <form action="/folders" method="post">

      <label for="name">Name</label>
      <input id="name" type="text" name="folder[name]" placeholder="Folder name" required/><br><br/>

      <label for="description">Description</label>
      <textarea id="description" name="folder[description]" placeholder="Description" rows="2" cols="100"></textarea><br><br/>

      <label for="category_id">Select a Category</label>
      <select id="category_id" type="text" name="folder[category_id]">
        <% @categories.each() do |category| %>
          <option value="<%= category.id()%>"> <%= category.name() %> </option>
        <% end %>
      </select>

      <br><br/>

      <!-- privacy checkbox - default is unchecked -->
      <!-- This is public folder unless user checks the box to flag it private -->
      <label for="privacy">Private Folder</label>
      <input id="privacy" type="checkbox" name="folder[privacy]" value=true><br><br/>

      <input type="submit" value="Create">

    </form> <!-- /new folder route -->
  </div> <!-- .col-md-8 col-md-offset-2 -->
</div> <!-- .container -->
