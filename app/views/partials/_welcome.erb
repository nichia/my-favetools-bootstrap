<!-- _welcome -->
<div class="row">
  <div class="col-sm-12">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="container">
          <% if logged_in? %>
            <h2> Welcom to myFaveTools <%= current_user.slug %></h2>
          <% else %>
            <h2>myFaveTools</h2>
          <% end %>
        </div>
        <!-- 2nd level nav link -->
        <ul class="navbar-nav mr-auto">
          <% if logged_in? %>
            <!-- url path_info: -->
            <!-- /folders/new -->
            <!-- /items/new -->
            <!-- * -->
            <% if !path_info.match(/\/folders\/new/) %>
              <li class="nav-item">
                <a href="/folders/new" class="btn btn-info" role="button">New Folder</a>
              </li>
            <% end %>

            <% if !path_info.match(/\/items\/new/) %>
              <li class="nav-item">
                <a href="/items/new" class="btn btn-info" role="button">New Item</a>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>
